      <form method="post" action="/url">
        <label>Enter your Original url</label>
        <input type="text" name="url" placeholder="https://exp.com" />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div>
    <% if (locals.urls) { %>
     <table>
      <thead>
        <th>S. No</th>
        <th>ShortId</th>
        <th>RedirectID</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        
      </tbody>
     </table>
    <% } %>
    </div>
  </body>
</html>
